@using TaskForge.Models;
@model Register;
@{
    ViewData["Title"] = "Register";
}

<div class="background-image2"></div>
<div class="background-image-wrap2"></div>

<div class="container pt-4">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="text-center">
                <form class="p-3 rounded transparent-form" asp-action="Register" method="post">
                    <h2 class="text-center mb-3">@ViewData["Title"]</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating bg-transparent">
                                    <input asp-for="Name" placeholder=" " class="form-control " required>
                                    <label asp-for="Name" class=" text-light">Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Surname" placeholder=" " class="form-control " required>
                                    <label asp-for="Surname" class="form-label text-light">Surname</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            <input asp-for="Username" placeholder=" " class="form-control " required>
                            <label asp-for="Username" class="form-label text-light">Username</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            <input asp-for="Email" placeholder=" " class="form-control " type="email" required>
                            <label asp-for="Email" class="form-label text-light">Email</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            <input asp-for="Password" placeholder=" " class="form-control " type="password" required>
                            <label asp-for="Password" class="form-label text-light">Password</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" placeholder=" " class="form-control " type="password" required>
                            <label asp-for="ConfirmPassword" class="form-label text-light">Confirm Password</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Gender" class="form-label">Gender</label>
                                    <select asp-for="Gender" class="form-select" required>
                                        <option value="">Select Gender</option>
                                        @foreach(var gender in Enum.GetValues(typeof(Gender)).Cast<Gender>()) {
                                            <option value="@gender">@Enum.GetName(typeof(Gender), gender)!.Replace("_", " ")</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                    <input asp-for="DateOfBirth" class="form-control" type="date" required>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-group">
                                    <label asp-for="Nationality" class="form-label">Nationality</label>
                                    <select asp-for="Nationality" class="form-select" required> 
                                        <option value="">Select Nationality</option>
                                        @foreach(var nat in Enum.GetValues(typeof(Nationality)).Cast<Nationality>()) {
                                            <option value="@nat">@Enum.GetName(typeof(Nationality), nat)!.Replace("_", " ")</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-group">
                                    <label asp-for="Languages" class="form-label">Languages</label>
                                    <select asp-for="Languages" class="selectpicker" id="language-select" required multiple>
                                        @foreach(var lang in Enum.GetValues(typeof(Language)).Cast<Language>()) {
                                            <option value="@lang">@Enum.GetName(typeof(Language), lang)!.Replace("_", " ")</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                    </div>
                    <div class="mb-2 mt-2">
                        <a asp-action="Login" class="text-decoration-none  mx-auto">Already have an account?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
