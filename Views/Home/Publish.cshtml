@using TaskForge.Models
@model ServiceModel
@{
    ViewData["Title"] = "Publish Service";
}

<div class="background-image4"></div>
<div class="background-image-wrap4"></div>

<div class="container p-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg p-5 border-0 rounded transparent-form">
                <h2 class="text-center text-primary">@ViewData["Title"]</h2>
                
                <form asp-controller="Home" asp-action="Publish" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-4">
                        <label asp-for="Title" class="form-label fs-5">Title</label>
                        <input type="text" asp-for="Title" placeholder="Enter title" class="form-control fs-6">
                        <span asp-validation-for="Title" class="text-danger fs-6"></span>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label asp-for="Description" class="form-label fs-5">Description</label>
                        <textarea asp-for="Description" placeholder="Enter description" class="form-control rounded fs-6" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger fs-6"></span>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Price" class="form-label fs-5">Price</label>
                            <div class="input-group rounded overflow-hidden">
                                <span class="input-group-text">$</span>
                                <input type="number" min="1" max="@Int16.MaxValue" step="0.1" asp-for="Price" class="form-control fs-6">
                            </div>
                            <span asp-validation-for="Price" class="text-danger fs-6"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="EstimatedTime" class="form-label fs-5">Estimated Time</label>
                            <input type="text" asp-for="EstimatedTime" placeholder="e.g., 2 hours" class="form-control fs-6">
                            <span asp-validation-for="EstimatedTime" class="text-danger fs-6"></span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Images" class="form-label fs-5">Images</label>  
                        <input type="file" asp-for="Images" class="form-control fs-6" multiple accept="image/*">
                    </div>
                    
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-5 fs-5">Publish</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
